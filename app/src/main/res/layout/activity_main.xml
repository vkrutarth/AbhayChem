<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chief_kmv.abhaychem.MainActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/order_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:text="Order Details Submission Form"
            android:onClick="OrderSubmit"/>

        <Button
            android:id="@+id/raw_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_details"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp"
            android:text="Raw Material Submission Form"
            android:onClick="RawSubmit"/>

        <Button
            android:id="@+id/exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/raw_order"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:text="Expenses Form"
            android:onClick="ExpSubmit"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
